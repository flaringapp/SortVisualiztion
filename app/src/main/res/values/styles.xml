<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MyText">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="HeaderText" parent="MyText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
    </style>

    <style name="AppTitleText" parent="HeaderText">
        <item name="android:textSize">@dimen/appTitleTextSize</item>
    </style>

    <style name="SortInfoText" parent="MyText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_button_rounded_full</item>
        <item name="android:foreground">@drawable/ripple_rounded_full</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonSmallPadding" parent="ButtonStyle">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ButtonSmall" parent="ButtonSmallPadding">
        <item name="android:minWidth">@dimen/smallButtonMinSize</item>
        <item name="android:textSize">@dimen/smallButtonTextSize</item>
    </style>

    <style name="ButtonVertical" parent="ButtonSmall">
        <item name="android:background">@drawable/bg_button_rounded_full_top</item>
        <item name="android:foreground">@drawable/ripple_rounded_full_top</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">@dimen/smallButtonMinSize</item>
    </style>

    <style name="ButtonBottom" parent="ButtonSmallPadding">
        <item name="android:background">@drawable/bg_button_rounded_full_top</item>
        <item name="android:foreground">@drawable/ripple_rounded_full_top</item>
        <item name="android:minWidth">@dimen/bottomButtonMinWidth</item>
    </style>

    <style name="ButtonLeft" parent="ButtonSmallPadding">
        <item name="android:background">@drawable/bg_button_rounded_full_right</item>
        <item name="android:foreground">@drawable/ripple_rounded_full_right</item>
    </style>

    <style name="ButtonRight" parent="ButtonSmallPadding">
        <item name="android:background">@drawable/bg_button_rounded_full_left</item>
        <item name="android:foreground">@drawable/ripple_rounded_full_left</item>
    </style>

    <style name="ButtonBottomAction" parent="ButtonBottom">
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">48dp</item>
    </style>

    <style name="ButtonVerticalLeft" parent="ButtonSmallPadding">
        <item name="android:background">@drawable/bg_button_rounded_full_right</item>
        <item name="android:foreground">@drawable/ripple_rounded_full_right</item>
    </style>

    <style name="ButtonVerticalRight" parent="ButtonSmallPadding">
        <item name="android:background">@drawable/bg_button_rounded_full_left</item>
        <item name="android:foreground">@drawable/ripple_rounded_full_left</item>
    </style>

</resources>
