<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
    </style>

    <style name="AppTitleText" parent="HeaderText">
        <item name="android:textSize">@dimen/appTitleTextSize</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_button_rounded_full</item>
        <item name="android:foreground">@drawable/ripple_rounded_full</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SmallButtonStyle" parent="ButtonStyle">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minWidth">@dimen/smallButtonMinWidth</item>
        <item name="android:textSize">@dimen/smallButtonTextSize</item>
    </style>

    <style name="BottomButton" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_button_rounded_full_top</item>
        <item name="android:foreground">@drawable/ripple_rounded_full_top</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>
